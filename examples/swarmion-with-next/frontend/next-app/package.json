{
  "name": "@swarmion-with-next/frontend-next-app",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "analyze": "ANALYZE=true pnpm build",
    "build": "next build",
    "dev": "next dev",
    "lint-fix": "pnpm linter-base-config --fix",
    "lint-fix-all": "pnpm lint-fix .",
    "linter-base-config": "eslint --ext=js,ts,jsx,tsx .",
    "start": "next start",
    "stylelint-base-config": "stylelint",
    "stylelint-fix": "pnpm stylelint-base-config --fix",
    "test": "pnpm test-linter && pnpm test-type && pnpm test-unit && pnpm test-circular",
    "test-circular": "pnpm depcruise --validate .dependency-cruiser.js src",
    "test-linter": "pnpm linter-base-config && pnpm stylelint-base-config **/*.{ts,tsx}",
    "test-type": "tsc --noEmit --emitDeclarationOnly false",
    "test-unit": "jest --maxWorkers=2 --collectCoverage --logHeapUsage --passWithNoTests"
  },
  "dependencies": {
    "next": "^13.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "dependency-cruiser": "^11.14.0",
    "eslint": "^8.27.0",
    "eslint-config-next": "^13.0.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-risxss": "^2.1.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-property-sort-order-smacss": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
