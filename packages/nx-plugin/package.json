{
  "name": "@swarmion/nx-plugin",
  "description": "Generate and use type-safe contracts between your Serverless services.",
  "version": "0.13.2",
  "contributors": [
    "MaximeVivier",
    "adriencaccia",
    "guillaumeduboc"
  ],
  "license": "MIT",
  "homepage": "https://www.swarmion.dev",
  "bugs": "https://github.com/swarmion/swarmion/issues",
  "repository": "swarmion/swarmion.git",
  "keywords": [
    "Serverless",
    "Typescript",
    "generator",
    "nx",
    "nxplugin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "generators.json"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "generators": "./generators.json",
  "scripts": {
    "clean": "rimraf dist",
    "lint-fix": "pnpm linter-base-config --fix",
    "lint-fix-all": "pnpm lint-fix .",
    "linter-base-config": "eslint --ext=js,ts",
    "package": "pnpm clean && pnpm package-transpile && pnpm package-types && pnpm package-types-aliases",
    "package-transpile": "tsup src/index.ts",
    "package-types": "tsc -p tsconfig.build.json",
    "package-types-aliases": "tsc-alias -p tsconfig.build.json",
    "test": "pnpm test-linter && pnpm test-type && pnpm test-circular",
    "test-circular": "pnpm depcruise --validate .dependency-cruiser.js .",
    "test-linter": "pnpm linter-base-config .",
    "test-type": "tsc --noEmit --emitDeclarationOnly false",
    "watch": "pnpm clean && concurrently 'pnpm:package-* --watch'"
  },
  "dependencies": {
    "@nrwl/devkit": "^15.0.4"
  },
  "devDependencies": {
    "@nrwl/js": "^15.0.4",
    "@nrwl/linter": "^15.0.4",
    "@types/node": "^18.11.8",
    "@vitest/coverage-c8": "^0.24.4",
    "concurrently": "^7.5.0",
    "dependency-cruiser": "^11.18.0",
    "eslint": "^8.26.0",
    "nx": "^15.0.4",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsup": "^6.5.0",
    "typescript": "^4.8.4",
    "vitest": "^0.24.4"
  },
  "peerDependencies": {
    "nx": "^15.0.4"
  }
}
